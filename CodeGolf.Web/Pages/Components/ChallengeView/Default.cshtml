@using CodeGolf.Domain
@using Westwind.AspNetCore.Markdown
@model CodeGolf.Domain.ChallengeInterfaces.IChallengeSet;


<div class="panel">
    <div class="panel-heading">
        <p>@Model.Title</p>
    </div>
    <div class="panel-block">
        <div class="content">@Markdown.ParseHtmlString(@Model.Description)</div>
    </div>

    @foreach (var a in Model.Challenges)
    {
        <div class="panel-block">@(GenericPresentationHelpers.DisplayFunction(a, Model.Params, Model.ReturnType))</div>
    }

<div class="panel-block">
    <i class="fas fa-info-circle has-text-info"></i>&nbsp;
    Create a function like&nbsp;<code id="codeSample">@GenericPresentationHelpers.GetFuncTemplate(Model)</code>
</div>
</div>